<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="test.bird.starrysky_sudoku.H2PActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#000000">
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_htp_back"
            android:layout_gravity="left|center"
            android:layout_marginLeft="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffffff"
            android:textStyle="bold"
            android:layout_gravity="left|center"
            android:layout_marginLeft="70dp"
            android:textSize="24sp"
            android:text="玩法说明"/>

    </FrameLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#ff000000"
                android:layout_margin="10dp"
                android:text="数独是一种宫格填字游戏"/>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <ImageView
                    android:layout_width="900px"
                    android:layout_height="900px"
                    android:layout_gravity="left"
                    android:src="@drawable/ic_htp_grid1" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#000000"
                    android:layout_gravity="left|top"
                    android:layout_marginTop="112px"
                    android:layout_marginLeft="17px"
                    android:textColor="#ffffffff"
                    android:textSize="18sp"
                    android:text="行"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#000000"
                    android:layout_gravity="left|bottom"
                    android:layout_marginBottom="312px"
                    android:layout_marginLeft="15px"
                    android:textColor="#ffffffff"
                    android:textSize="18sp"
                    android:text="小方块"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#000000"
                    android:layout_gravity="right|bottom"
                    android:layout_marginRight="112px"
                    android:layout_marginBottom="15px"
                    android:textColor="#ffffffff"
                    android:textSize="18sp"
                    android:text="列"/>
            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#ff000000"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="30sp"
                android:text="数独宫格可以被拆分为9行，9列和9个小方块。"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#ff000000"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:text="每一行，列和小方块必须包含无重复的数字1至9。"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp">
                <ImageView
                    android:layout_width="900px"
                    android:layout_height="900px"
                    android:layout_gravity="left"
                    android:src="@drawable/ic_htp_grid2" />
                <ImageView
                    android:layout_width="150px"
                    android:layout_height="150px"
                    android:src="@drawable/ic_htp_grid_correct"
                    android:layout_gravity="center"
                    android:layout_marginBottom="100px"
                    android:layout_marginRight="150px"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="70px"
                    android:background="#008000"
                    android:layout_gravity="center"
                    android:layout_marginLeft="50px"
                    android:layout_marginBottom="90px"
                    android:textColor="#ffffffff"
                    android:textSize="18sp"
                    android:text="正确的行"
                    />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp">
                <ImageView
                    android:layout_width="900px"
                    android:layout_height="900px"
                    android:layout_gravity="left"
                    android:src="@drawable/ic_htp_grid3" />
                <ImageView
                    android:layout_width="150px"
                    android:layout_height="150px"
                    android:src="@drawable/ic_htp_grid_correct"
                    android:layout_gravity="center"
                    android:layout_marginBottom="100px"
                    android:layout_marginRight="100px"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="70px"
                    android:background="#008000"
                    android:layout_gravity="center"
                    android:layout_marginLeft="100px"
                    android:layout_marginBottom="90px"
                    android:textColor="#ffffffff"
                    android:textSize="18sp"
                    android:text="正确的列"
                    />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp">
                <ImageView
                    android:layout_width="900px"
                    android:layout_height="900px"
                    android:layout_gravity="left"
                    android:src="@drawable/ic_htp_grid4" />
                <ImageView
                    android:layout_width="150px"
                    android:layout_height="150px"
                    android:src="@drawable/ic_htp_grid_correct"
                    android:layout_gravity="center"
                    android:layout_marginBottom="100px"
                    android:layout_marginRight="250px"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="70px"
                    android:background="#008000"
                    android:layout_gravity="center"
                    android:layout_marginRight="50px"
                    android:layout_marginBottom="90px"
                    android:textColor="#ffffffff"
                    android:textSize="18sp"
                    android:text="正确的小方块"
                    />
            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="#ff000000"
                android:text="当所有的行，列和小方块被正确填满，数独完成！"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <ImageView
                    android:layout_width="900px"
                    android:layout_height="900px"
                    android:layout_gravity="left"
                    android:src="@drawable/ic_htp_grid5" />
                <ImageView
                    android:layout_width="150px"
                    android:layout_height="150px"
                    android:src="@drawable/ic_htp_grid_correct"
                    android:layout_gravity="center"
                    android:layout_marginBottom="100px"
                    android:layout_marginRight="150px"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="70px"
                    android:background="#008000"
                    android:layout_gravity="center"
                    android:layout_marginLeft="50px"
                    android:layout_marginBottom="90px"
                    android:textColor="#ffffffff"
                    android:textSize="18sp"
                    android:text="数独完成"
                    />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
