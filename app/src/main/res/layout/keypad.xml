<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/numbt">
    <LinearLayout android:id="@+id/numbt1"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal">
        <Button android:id="@+id/bt1"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:background="@drawable/ic_play_numberbox_bg1"
            android:textSize="24sp"
            android:layout_weight="1"
            android:text="1"/>
        <Button android:id="@+id/bt2"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:background="@drawable/ic_play_numberbox_bg1"
            android:textSize="24sp"
            android:layout_weight="1"
            android:text="2"/>
        <Button android:id="@+id/bt3"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:background="@drawable/ic_play_numberbox_bg1"
            android:textSize="24sp"
            android:layout_weight="1"
            android:text="3"/>
        <Button android:id="@+id/bt4"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:background="@drawable/ic_play_numberbox_bg1"
            android:textSize="24sp"
            android:layout_weight="1"
            android:text="4"/>
        <Button android:id="@+id/bt5"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:background="@drawable/ic_play_numberbox_bg1"
            android:textSize="24sp"
            android:layout_weight="1"
            android:text="5"/>

        <ImageButton android:id="@+id/mark"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_play_numberbox_markoff"
            android:scaleType="centerInside"/>
    </LinearLayout>
    <LinearLayout android:id="@+id/btnum2"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal">
        <Button android:id="@+id/bt6"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:background="@drawable/ic_play_numberbox_bg1"
            android:textSize="24sp"
            android:layout_weight="1"
            android:text="6"/>
        <Button android:id="@+id/bt7"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:background="@drawable/ic_play_numberbox_bg1"
            android:textSize="24sp"
            android:layout_weight="1"
            android:text="7"/>
        <Button android:id="@+id/bt8"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:background="@drawable/ic_play_numberbox_bg1"
            android:layout_weight="1"
            android:textSize="24sp"
            android:text="8"/>
        <Button android:id="@+id/bt9"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:background="@drawable/ic_play_numberbox_bg1"
            android:layout_weight="1"
            android:textSize="24sp"
            android:text="9"/>
        <ImageButton android:id="@+id/revoke"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/ic_play_numberbox_revoke"
            android:scaleType="centerInside"
            />
    </LinearLayout>


</LinearLayout>
